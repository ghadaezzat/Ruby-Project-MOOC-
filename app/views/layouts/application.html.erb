<!DOCTYPE html>
<html>
<head>
  <title>MOOC</title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class='navbar navbar-inverse'>
            <div class="container">
              <div class="navbar_header">
                 <%= link_to "Home",root_path,class: "navbar-brand"  %>
              </div>
                <ul class="nav navbar-nav">

                     <%if user_signed_in? %>
                    <% if current_user.admin == true %>
                       <li><%= link_to 'Adminstration',rails_admin_path %></li>                     

                    <% end %>
                      <li><%= link_to 'Add Course',new_course_path %></li>                     

                     <% else %>
                        <li ><%= link_to "Sign up", new_user_registration_path %></li>
                        <li><%= link_to "sign in",new_user_session_path  %></li>
                     <% end %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    
                      <% if params[:id].blank? %>
                           <li class="dropdown">
                             <a href="#" class="dropdown-toggle" data-toggle="dropdown">Courses<span class="caret">
                                 <ul class="dropdown-menu">
                                     <li >No available courses</li>
                                 </ul>
                             </span></a>
                            </li>
                            
                       <%else%>
                            
                           <li class="dropdown">
                             <a href="#" class="dropdown-toggle" data-toggle="dropdown">Courses<span class="caret">
                                 <ul class="dropdown-menu">
                                     <% Course.all.each do |course| %>
                                        <li class="<%= 'active' if params[:id] == course.id %>"><%= link_to course.title, course_path,class: "link" %><li>
                                     <% end %>         
                                 </ul>
                             </span></a>
                            </li>
                            <%end%>
                 <%if user_signed_in? %>
                    <li><%= link_to "sign out", destroy_user_session_path, method: :delete %> </li>

                    <li class="form-inputs" style="color:white; margin-top: 10px;margin-left: 10px;">welcome <%= current_user.name %> </li>
                    <img src=<%= current_user.image %>/>

                     <% end %>
                </ul>
            </div>
    </nav>
    <div class="container">
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

       <%= yield %>
    </div>

</body>
</html>
  <style>
    img{
        width: 50px;
        height: 50px;
        margin-left: 20px;    
    }
    </style>